#:kivy 1.8.0

<TextHash>:
    orientation: 'vertical'
    text: 'foo'
    thehash: thehash
    Image:
        size_hint: 1, None
        height: sp(512)
        allow_stretch: True
        id: thehash
        have_next: False
    Label:
        size_hint: 1, None
        height: sp(24)
        text: 'Memory stuff here'
    TextInput:
        text: 'Matching stuff here'
        on_text: root.text = self.text; root.on_text()

<Pairs>:
    left_button: left_button
    right_button: right_button
    img: img
    img2: img2
    orientation: 'vertical'
    spacing: sp(25)
    Label:
        size_hint: 1, None
        height: sp(24)
        text: ''
    Image:
        allow_stretch: True
        text: 'matching1'
        id: img
        x: root.width
        num: 0
        have_next: False
        canvas.before:
            PushMatrix
            Rotate:
                axis: 0,0,1
                angle: root.angle1
                origin: self.center
        canvas.after:
            PopMatrix
    Image:
        allow_stretch: True
        text: 'matching1'
        id: img2
        x: -root.width
        num: 0
        have_next: False
        canvas.before:
            PushMatrix
            Rotate:
                axis: 0,0,1
                angle: root.angle2
                origin: self.center
        canvas.after:
            PopMatrix
    BoxLayout:
        size_hint: 1, None
        height: sp(80)
        orientation: 'horizontal'
        padding: [sp(5),sp(25),sp(5),sp(5)]
        spacing: sp(5)
        Button:
            id: left_button
            text: 'Different'
            disabled: True
            on_press: root.ItDiffers()
        Button:
            id: right_button
            text: 'Same'
            disabled: True
            on_press: root.ItMatches()

<SlowPairs>:
    left_button: left_button
    middle_button: middle_button
    right_button: right_button
    img: img
