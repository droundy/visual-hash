#:kivy 1.8.0

<Memory>:
    orientation: 'vertical'
    NiceImage:
        size_hint: 1, None
        height: sp(128)
        allow_stretch: True
        id: thehash
    Label:
        size_hint: 1, None
        height: sp(24)
        text: 'Memory stuff here'
    TextInput:
        text: 'Matching stuff here'
        on_text: thehash.text = self.text


<Matching>:
    left_button: left_button
    right_button: right_button
    img: img
    orientation: 'vertical'
    NiceImage:
        size_hint: 1, 1
        allow_stretch: True
        text: 'matching1'
        id: img
    BoxLayout:
        size_hint: 1, None
        height: sp(80)
        orientation: 'horizontal'
        Button:
            id: left_button
            text: 'Different'
            disabled: True
            on_press: root.ItDiffers()
        Button:
            id: right_button
            text: 'I remember this'
            on_press: root.ItMatches() if self.text == 'Same' else root.Start()

<Home>:
    #size_hint: .5, .5
    #pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Home'
        RstDocument:
            text: "Hello world\n-----------\nThis is a nice game.\n"

    TabbedPanelItem:
        text: 'Matching'
        Matching:
    TabbedPanelItem:
        text: 'Memory'
        Memory:
