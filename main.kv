        size_hint: 1, None
        height: sp(128)
        id: thehash
        text: 'hello'
    Label:
        size_hint: 1, None
        height: sp(24)
        text: 'Memory stuff here'
    TextInput:
        text: 'Matching stuff here'
        on_text: thehash.text = self.text


